# .env.example
# Copy this file to .env and replace with your actual keys

# Django Core Settings
DEBUG=1
LOCALDEV=1
SECRET_KEY=django-insecure-change-this-in-production
DOMAIN_NAME=localhost

# PostgreSQL Settings
POSTGRES_DB=modernomad
POSTGRES_USER=modernomad
POSTGRES_PASSWORD=password

# Email Settings
# Mailgun will send in testmode by default, unless MAILGUN_CAUTION_SEND_REAL_MAIL=True
MAILGUN_API_KEY=
MAILGUN_CAUTION_SEND_REAL_MAIL=0
EMAIL_SUBJECT_PREFIX=[Modernomad]
DEFAULT_FROM_EMAIL=stay@example.com
# LIST DOMAIN must be set correctly for Mailgun to work
LIST_DOMAIN=somedomain.com

# Payment Settings
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Logging
DJANGO_LOG_LEVEL=INFO

# Optional Features
ENABLE_SLACK=0